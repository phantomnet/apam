<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apam.Pages.LecturaHoroscopoPage"
             BackgroundColor="White"
             Title="Lectura de Horoscopo">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <HorizontalStackLayout Grid.Row="0" Margin="0" BackgroundColor="#efefef" Grid.ColumnSpan="2" Spacing="10" >
            <Image x:Name="lblImagen" Source="horoscope.png" HeightRequest="52" WidthRequest="52" Margin="20,10,10,10" VerticalOptions="Center"/>
            <Label x:Name="lblSigno" FontSize="22" TextColor="Black" LineBreakMode="WordWrap" FontAttributes="Bold" Grid.Column="1" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <ScrollView Grid.Row="1" Grid.ColumnSpan="2" HorizontalOptions="Start" VerticalOptions="Start" >
            <Border BackgroundColor="#044680" x:Name="bdResponse" IsVisible="False" Margin="15" Padding="15" >
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Label Text="" TextColor="White" HorizontalOptions="Center" x:Name="lblResponse" LineBreakMode="WordWrap" FontSize="17" />
            </Border>
        </ScrollView>
    </Grid>

</ContentPage>